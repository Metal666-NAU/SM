<UserControl x:Class="Lab5.NumberInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab5"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
	<ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
		<StackPanel Height="30" Margin="5" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top">
			<TextBlock Width="30" Text="0" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
			<Label Content="." VerticalContentAlignment="Bottom"></Label>
			<TextBox Name="NumberLength" Width="30" Text="0" TextAlignment="Center" VerticalContentAlignment="Center" TextChanged="NumberLengthChanged"></TextBox>
			<Label Content="." VerticalContentAlignment="Bottom"></Label>
			<Rectangle Fill="Gray" Width="1" Margin="2, 0, 10, 0"></Rectangle>
			<StackPanel Name="DigitsPanel" Orientation="Horizontal"></StackPanel>
		</StackPanel>
	</ScrollViewer>
</UserControl>
